@model FileListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">    
    <div class="col-md-9">
        @if (Model.FileModels.Count == 0)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-warning">
                        Fayl Tapilmadi
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.FileModels)
                {
                    <div class="col-md-3">
                        @await Html.PartialAsync("_file",item)
                    </div>
                }
            </div>
        }
    </div>
</div>


@section Scripts
{
