@model FileModel

<h1 class="h3">Fayl Yarat</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-controller="Admin" asp-action="CreateFile" enctype="multipart/form-data">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Path" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="hidden" asp-for="Path">
                    <input type="file" name="fromfile" />
                    <span class="text-danger" asp-validation-for="Path"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Əlavə Et</button>
                </div>
            </div>
        </form>
    </div>
</div>