@using FileSharingApp.Data.Entities.Identity
@model FileModel

<h1 class="h3">Düzəliş Et</h1>
<hr />

<form asp-controller="Admin" asp-action="EditFile" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row">
            <div class="col-md-8">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group row">
                    <label asp-for="Path" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="Path">
                        <iframe src="~/files/@Model.Path" type="application/pdf" ></iframe>
                        <input type="file" name="fromfile" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Yadda Saxla</button>
                    </div>
                </div>
            </div>
         <div>
     </div>

    <div class="col-md-4">
     @foreach (var item in ViewBag.Users)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" 
                           class="custom-control-input"
                           name="userIds"
                           value="@item.Id"
                           id="user_@(item.Id)" 
                           @(Model.SelectedUsers.Any(i=>i.Id==item.Id) ? "checked" : "")>
                    <label class="custom-control-label" for="user_@(item.Id)">@item.FirstName</label>
                </div>
            }
      </div>
    </div>
</form>
